# Stavily Agents Environment Configuration
# Copy this file to .env and set your actual values

# Required: Agent authentication token (JWT)
# This token is used by both sensor and action agents to authenticate with the Stavily API
STAVILY_AGENT_TOKEN=your-jwt-token-here

# Optional: Enable demo/simulation mode for plugins (default: true)
# When enabled, plugins will simulate operations instead of executing real commands
STAVILY_DEMO_MODE=true

# Optional: Organization ID override
# If not set, agents will use the organization_id from their config files
# STAVILY_ORGANIZATION_ID=your-org-id

# Optional: API base URL override
# If not set, agents will use the base_url from their config files
# STAVILY_API_BASE_URL=https://agents.stavily.com

# Optional: Log level override for development
# Uncomment to override the log level in config files
# STAVILY_LOG_LEVEL=debug 